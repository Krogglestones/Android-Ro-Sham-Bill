<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_guess"
        tools:context=".GuessActivity">

    <TextView
            android:text="PLAYER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_PlayerNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="GUESS A NUMBER BETWEEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="18sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_LowNumber"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView_PlayerNumber"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_HighNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView_PlayerNumber"/>
    <TextView
            android:text="AND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView_PlayerNumber"
            app:layout_constraintStart_toEndOf="@+id/textView_LowNumber" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_HighNumber" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Guess!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGuess"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/editText_playerGuess"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_playerGuess" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_HighNumber" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:hint="Enter Guess Here"/>
</android.support.constraint.ConstraintLayout>