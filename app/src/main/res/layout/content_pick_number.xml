<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_pick_number"
        android:background="@drawable/croppedbackground"
        tools:context=".PickNumberActivity">

    <TextView
            android:text="PICK A NUMBER (1-500)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp"
            android:shadowColor="@color/text_shadow_black"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="4" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textAlignment="center"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPickNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/editText_serverNumber"
            android:background="#FFFFFF" android:textStyle="bold" android:fontFamily="cursive" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_serverNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:hint="ENTER A NUMBER" android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" android:textColorHighlight="#FFFFFF"/>
</android.support.constraint.ConstraintLayout>