<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardElevation="3dp" app:contentPadding="16dp"
            app:cardCornerRadius="4dp" app:cardUseCompatPadding="true" app:cardMaxElevation="4dp"
            app:cardBackgroundColor="#ffffff" android:fadingEdge="none"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textGameId" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" android:textAlignment="center" android:textSize="18sp"
                    android:fontFamily="casual" android:textStyle="bold"
                    android:shadowColor="@color/text_shadow_black"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="4"/>
            <TextView
                    android:text="GAME NUMBER"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:textSize="18sp" android:fontFamily="casual" android:textStyle="bold"
                    android:shadowColor="@color/text_shadow_black"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="4"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>